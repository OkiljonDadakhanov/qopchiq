{
  "info": {
    "name": "Qopchiq API V0.0.5",
    "description": "Complete API endpoints for Qopchiq application with authentication, user management, business management, and file upload",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "description": "Authentication related endpoints",
      "item": [
        {
          "name": "Sign Up",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/signup",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "signup"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Test User\",\n    \"email\": \"test@example.com\",\n    \"password\": \"testpassword123\"\n}"
            },
            "description": "Register a new user account. Sends verification email."
          }
        },
        {
          "name": "Verify Email",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/verify-email",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "verify-email"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"code\": \"123456\"\n}"
            },
            "description": "Verify user's email with the code sent during registration"
          }
        },
        {
          "name": "Resend Verification",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/resend-verification",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "resend-verification"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\"\n}"
            },
            "description": "Resend verification code with cooldown and daily limits"
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/login",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"testpassword123\"\n}"
            },
            "description": "Login with existing user credentials"
          }
        },
        {
          "name": "Business Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/business/signup",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "business", "signup"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Test Business\",\n    \"email\": \"business@example.com\",\n    \"password\": \"businesspassword123\",\n    \"phoneNumber\": \"+998901234567\",\n    \"description\": \"Business description\",\n    \"address\": \"Business address\",\n    \"businessType\": \"restaurant\"\n}"
            },
            "description": "Register a new business account. Sends verification email."
          }
        },
        {
          "name": "Business Verify Email",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/business/verify-email",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "business", "verify-email"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"code\": \"123456\"\n}"
            },
            "description": "Verify business email with the code sent during registration"
          }
        },
        {
          "name": "Business Resend Verification",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/business/resend-verification",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "business", "resend-verification"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"business@example.com\"\n}"
            },
            "description": "Resend verification code for business with cooldown and daily limits"
          }
        },
        {
          "name": "Business Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/business/login",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "business", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"business@example.com\",\n    \"password\": \"businesspassword123\"\n}"
            },
            "description": "Login with existing business credentials"
          }
        },
        {
          "name": "Refresh",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{BASE_URL}}/api/auth/refresh",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "refresh"]
            },
            "description": "Rotate refresh token from HttpOnly cookie and return new access token"
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{BASE_URL}}/api/auth/logout",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "logout"]
            },
            "description": "Logout the current user and clear JWT cookie"
          }
        },
        {
          "name": "Forgot Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/forgot-password",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "forgot-password"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"test@example.com\"\n}"
            },
            "description": "Request password reset link via email"
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/reset-password/:token",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "reset-password", ":token"],
              "variable": [
                {
                  "key": "token",
                  "value": "reset-token-here",
                  "description": "Password reset token received via email"
                }
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"password\": \"newpassword123\"\n}"
            },
            "description": "Reset password using token received via email"
          }
        }
      ]
    },
    {
      "name": "Users",
      "description": "User profile management endpoints",
      "item": [
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/users/me",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "users", "me"]
            },
            "description": "Get current authenticated user's profile"
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/users/me",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "users", "me"]
            },
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "name",
                  "value": "Updated Name",
                  "type": "text"
                },
                {
                  "key": "email",
                  "value": "updated@example.com",
                  "type": "text"
                },
                {
                  "key": "phone",
                  "value": "+998901234567",
                  "type": "text"
                },
                {
                  "key": "avatar",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "description": "Update profile fields including avatar file. Avatar file is optional. If provided, automatically uploads to Appwrite and sets avatar URL."
          }
        },
        {
          "name": "Update Single Field",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/users/me/:key",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "users", "me", ":key"],
              "variable": [
                {
                  "key": "key",
                  "value": "name",
                  "description": "Field to update (name, email, phone)"
                }
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"value\": \"Only Name Updated\"\n}"
            },
            "description": "Update a single field by key (name, email, phone)"
          }
        },
        {
          "name": "Delete Me",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/users/me",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "users", "me"]
            },
            "description": "Delete current authenticated user's account"
          }
        }
      ]
    },
    {
      "name": "Upload",
