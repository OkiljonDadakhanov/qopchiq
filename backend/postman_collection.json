{
  "info": {
    "name": "Qopchiq API V0.0.3",
    "description": "Authentication and user management API endpoints for Qopchiq application",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "description": "Authentication related endpoints",
      "item": [
        {
          "name": "Sign Up",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/signup",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "auth",
                "signup"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Test User\",\n    \"email\": \"test@example.com\",\n    \"password\": \"testpassword123\"\n}"
            },
            "description": "Register a new user account. Sends verification email."
          }
        },
        {
          "name": "Verify Email",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/verify-email",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "auth",
                "verify-email"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"code\": \"123456\"\n}"
            },
            "description": "Verify user's email with the code sent during registration"
          }
        },
        {
          "name": "Resend Verification",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/resend-verification",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "auth",
                "resend-verification"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\"\n}"
            },
            "description": "Resend verification code with cooldown and daily limits"
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/login",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"testpassword123\"\n}"
            },
            "description": "Login with existing user credentials"
          }
        },
        {
          "name": "Refresh",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{BASE_URL}}/api/auth/refresh",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "auth",
                "refresh"
              ]
            },
            "description": "Rotate refresh token from HttpOnly cookie and return new access token"
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{BASE_URL}}/api/auth/logout",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "auth",
                "logout"
              ]
            },
            "description": "Logout the current user and clear JWT cookie"
          }
        },
        {
          "name": "Forgot Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/forgot-password",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "auth",
                "forgot-password"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"test@example.com\"\n}"
            },
            "description": "Request password reset link via email"
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/reset-password/:token",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "auth",
                "reset-password",
                ":token"
              ],
              "variable": [
                {
                  "key": "token",
                  "value": "reset-token-here",
                  "description": "Password reset token received via email"
                }
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"password\": \"newpassword123\"\n}"
            },
            "description": "Reset password using token received via email"
          }
        }
      ]
    },
    {
      "name": "Users",
      "description": "User profile management endpoints",
      "item": [
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/users/me",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "users",
                "me"
              ]
            },
            "description": "Get current authenticated user's profile"
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/users/me",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "users",
                "me"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\",\n  \"email\": \"updated@example.com\"\n}"
            },
            "description": "Update multiple profile fields (allowed: name, email)"
          }
        },
        {
          "name": "Update Single Field",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/users/me/:key",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "users",
                "me",
                ":key"
              ],
              "variable": [
                {
                  "key": "key",
                  "value": "name",
                  "description": "Field to update (name or email)"
                }
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"value\": \"Only Name Updated\"\n}"
            },
            "description": "Update a single field by key (name or email)"
          }
        },
        {
          "name": "Delete Me",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/users/me",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "users",
                "me"
              ]
            },
            "description": "Delete current authenticated user's account"
          }
        },
        {
          "name": "Update Avatar",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/users/me/avatar",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "users",
                "me",
                "avatar"
              ]
            },
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "description": "Upload and set user's avatar (form-data with file field)"
          }
        }
      ]
    }
  ],
  "item_append": [
    {
      "name": "Files",
      "description": "File upload and management",
      "item": [
        {
          "name": "Upload File",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{BASE_URL}}/api/files/upload",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "files",
                "upload"
              ]
            },
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "folder",
                  "type": "text",
                  "value": "uploads"
                }
              ]
            },
            "description": "Upload a file to storage and return {id,url,...}"
          }
        },
        {
          "name": "Delete File",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{BASE_URL}}/api/files/:id",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "files",
                ":id"
              ],
              "variable": [
                {
                  "key": "id",
                  "value": "file-id-here"
                }
              ]
            },
            "description": "Delete a file by id"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:5000",
      "type": "string"
    }
  ]
}